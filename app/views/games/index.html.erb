<h1>List of Games</h1>

<table cellspacing="10">
  <tr>
    <th>Name</th>
    <th>Number of Players</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><center><%= game.num_of_players %></center></td>
    <td><%= link_to 'View', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Remove', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

